@model EmaPosProject.ViewModel.SectorCategories
@{
    ViewBag.Title = "SektorDetay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid page-header" style="height: 250px;">
    <div class="container" style="height: 250px;">
        <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 250px;">
            <h3 class="display-4 text-white text-uppercase">@Model.Sector.title</h3>
            <div class="d-inline-flex text-white">
                <p class="m-0 text-uppercase"><a class="text-white" href="/Anasayfa/Index">Anasayfa</a></p>
                <i class="fa fa-angle-double-right pt-1 px-3"></i>
                <p class="m-0 text-uppercase">@Model.Sector.title</p>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid py-5">
    <div class="row">
        <div class="col-lg-6" style="min-height: 500px;">
            <div class="position-relative h-100">
                <img class="position-absolute w-100 h-100" src="https://admin.emapos.com.tr/Images/Sector/@Model.Sector.image" style="object-fit: cover;">
            </div>
        </div>
        <div class="col-lg-6 pt-5 pb-lg-5">
            <div class="about-text bg-white p-4 p-lg-5 my-lg-5">
                <h2 class="text-primary text-uppercase" style="letter-spacing: 5px;">@Model.Sector.title</h2>
                <p>
                    @Model.Sector.text
                </p>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="text-center mb-3 pb-3">
            <h3 class="text-primary text-uppercase" style="letter-spacing: 5px;">TEKLİF EDİLEN ÜRÜNLER</h3>
        </div>
        <div class="owl-carousel testimonial-carousel">
            @foreach (var x in Model.SectorsCategoryList)
            {
                <div class="text-center pb-4">
                    <div class="destination-item position-relative overflow-hidden mb-2">
                        <img class="img-fluid" src="https://admin.emapos.com.tr/Images/Category/@x.category.image" style="height:300px;" alt="EmaPos @x.category.name">
                        <div class="destination-overlay text-white text-decoration-none">
                            <h3 class="text-white">
                                @x.category.name
                            </h3>
                            <div class="text-white">
                                <a class="btn btn-danger " href="/Anasayfa/Urun/@x.category.id">İncele></a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div class="container-fluid " style="padding-bottom:40px;">
    <div class="container ">
        <div class="text-center mb-3 pb-3">
            <h3 class="text-primary text-uppercase" style="letter-spacing: 5px;">HIZLI TEKLİF AL!</h3>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="contact-form bg-white" style="padding: 30px;">
                    <form action="https://formspree.io/f/mjvdjzeg"
                          method="POST" target="_blank">
                        <div class="form-row">
                            <div class="control-group col-sm-6">
                                <input type="text" class="form-control p-4" name="Ad Soyad" placeholder="Ad Soyad"
                                       required="required" />
                                <br />
                            </div>
                            <div class="control-group col-sm-6">
                                <input type="email" class="form-control p-4" name="email" placeholder="E-Mail"
                                       required="required" />
                                <br />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="control-group col-sm-6">
                                <input type="text" class="form-control p-4" name="Firma" placeholder="Firma Ünvanı"
                                       required="required" />
                                <br />
                            </div>
                            <div class="control-group col-sm-6">
                                <input type="number" min="0" class="form-control p-4" name="Numara" placeholder="Telefon"
                                       required="required" />
                                <br />
                            </div>
                        </div>
                        <div class="control-group">
                            <textarea class="form-control py-3 px-4" rows="5" name="message" placeholder="Hangi ürün veya çözümüz ile ilgileniyorsunuz?"
                                      required="required"></textarea>
                            <br />
                        </div>
                        <div class="text-center">
                            <button class="btn btn-danger py-3 px-4" type="submit" id="sendMessageButton">Teklif Al!</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

