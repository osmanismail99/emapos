@model EmaPosProject.ViewModel.ProductImages
@{
    ViewBag.Title = "UrunDetay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid page-header" style="height: 250px;">
    <div class="container" style="height: 250px;">
        <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 250px;">
            <h3 class="display-4 text-white text-uppercase">ÜRÜN DETAY</h3>
            <div class="d-inline-flex text-white">
                <p class="m-0 text-uppercase"><a class="text-white" href="/Anasayfa/Index">Anasayfa</a></p>
                <i class="fa fa-angle-double-right pt-1 px-3"></i>
                <p class="m-0 text-uppercase"><a class="text-white" href="/Anasayfa/Donanim/">Ürünler</a></p>
                <i class="fa fa-angle-double-right pt-1 px-3"></i>
                <p class="m-0 text-uppercase">@Model.Product.title</p>

            </div>
        </div>
    </div>
</div>
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-8">
                <div class="pb-3">
                    <div id="header-carousel" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            @foreach (var x in Model.ProdctImagess)
                            {
                                <div class="carousel-item @(x == Model.ProdctImagess.First() ? "active" : "")">
                                    <img class="img-fluid w-100 h-100" src="https://admin.emapos.com.tr/Images/Category/@x.image" style="height:480px;" alt="EmaPos @x.id">
                                </div>
                            }
                        </div>
                        <a class="carousel-control-prev" href="#header-carousel" data-slide="prev">
                            <div class="btn btn-dark" style="width: 45px; height: 45px;">
                                <span class="carousel-control-prev-icon mb-n2"></span>
                            </div>
                        </a>
                        <a class="carousel-control-next" href="#header-carousel" data-slide="next">
                            <div class="btn btn-dark" style="width: 45px; height: 45px;">
                                <span class="carousel-control-next-icon mb-n2"></span>
                            </div>
                        </a>
                    </div>
                    <div class="bg-white mb-3" style="padding: 30px;">
                        <div class="d-flex mb-3">
                            <a class="text-primary text-uppercase text-decoration-none">
                                @Model.Product.title
                            </a>
                        </div>
                        <p>
                            @Html.Raw(Model.Product.text)
                        </p>
                    </div>
                </div>
            </div>
            <div class="my-col-lg-4 mt-5 mt-lg-0">
                <div class="mb-5">
                    <h4 class="text-uppercase mb-4" style="letter-spacing: 5px;">KATEGORİLER</h4>
                    <div class="bg-white" style="padding: 30px;">
                        <ul class="list-inline m-0">
                            @foreach (var x in Model.CategoryList)
                            {
                                <li class="mb-3 d-flex justify-content-between align-items-center">
                                    <a class="text-dark" href="/Anasayfa/Urun/@x.id">
                                        <i class="fa fa-angle-right text-primary mr-2"></i>@x.name
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="text-center mb-3 pb-3">
            <h3 class="text-primary text-uppercase" style="letter-spacing: 5px;">BENZER ÜRÜNLER</h3>
        </div>
        <div class="owl-carousel testimonial-carousel">
            @foreach (var x in Model.ProductList.Take(7))
            {
                <div class="text-center pb-4">
                    <div class="destination-item position-relative overflow-hidden mb-2">
                        @if (x.productImage.Count > 0)
                        {
                        <img class="img-fluid" src="https://admin.emapos.com.tr/Images/Category/@Model.ProductImageList.Find(img => x.id == img.productId).image" style="height:300px;" alt="EmaPos @x.title">
                        }
                        <div class="destination-overlay text-white text-decoration-none" href="">
                            <h3 class="text-white">
                                @x.title
                            </h3>
                            <div class="text-white">
                                <a class="btn btn-danger" href="/Anasayfa/UrunDetay/@x.id">İncele></a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div class="container-fluid " style="padding-bottom:40px;">
    <div class="container">
        <div class="text-center mb-3 pb-3">
            <h3 class="text-primary text-uppercase" style="letter-spacing: 5px;">TEKLİF AL!</h3>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="contact-form bg-white" style="padding: 30px;">
                    <form action="https://formspree.io/f/mjvdjzeg"
                          method="POST" target="_blank">
                        <div class="control-group">
                            <input type="text" class="form-control p-4" name="Ad Soyad" placeholder="Ad Soyad"
                                   required="required" />
                            <br />
                        </div>
                        <div class="control-group">
                            <input type="email" class="form-control p-4" name="email" placeholder="E-Mail"
                                   required="required" />
                            <br />
                        </div>
                        <div class="control-group">
                            <input type="number" class="form-control p-4" name="Telefon" min="0" placeholder="Telefon"
                                   required="required" />
                            <br />
                        </div>
                        <div class="control-group">
                            <textarea class="form-control py-3 px-4" rows="5" name="message" placeholder="Mesaj"
                                      required="required"></textarea>
                            <br />
                        </div>
                        <div class="text-center">
                            <button class="btn btn-primary py-3 px-4" type="submit" id="sendMessageButton">Gönder</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
