@using EmaPosProject.Models.Entity
@model List<category>
@{
    ViewBag.Title = "Donanim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid page-header" style="height: 250px;">
    <div class="container" style="height: 250px;">
        <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 250px;">
            <h3 class="display-4 text-white text-uppercase">DONANIM</h3>
            <div class="d-inline-flex text-white">
                <p class="m-0 text-uppercase"><a class="text-white" href="/Anasayfa/Index">Anasayfa</a></p>
                <i class="fa fa-angle-double-right pt-1 px-3"></i>
                <p class="m-0 text-uppercase">DONANIM</p>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid py-5">
    <div class="container pt-5 pb-3">
        <div class="row">
            @foreach (var x in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="destination-item position-relative overflow-hidden mb-2">
                        <img class="img-fluid w-100 h-100" src="https://admin.emapos.com.tr/Images/Category/@x.image" alt="EmaPos @x.name" style="width:400px;height:350px;">
                        <a class="destination-overlay text-white text-decoration-none" href="/Anasayfa/Urun/@x.id">
                            <h6 class="text-white text-center my-font-size">@x.name</h6>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

